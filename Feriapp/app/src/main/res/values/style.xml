    </style>
    <style name="botonRegistrarHorizontal">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:text">@string/registrarse</item>
        <item name="android:textColor">@color/colorBotones</item>
        <item name="android:textSize">@dimen/LetraBotones</item>
        <item name="android:layout_marginRight">@dimen/separacionBotonesHorizontalLateral</item>
        <item name="android:layout_marginBottom">@dimen/separacionBotonesHorizontalVertical</item>
        <item name="android:layout_width">@dimen/anchoBotones</item>
        <item name="android:layout_height">@dimen/altoBotones</item>
    </style>

    <!-- Pantalla Crear Usuario -->

    <style name="FotoCrearUsuario">
