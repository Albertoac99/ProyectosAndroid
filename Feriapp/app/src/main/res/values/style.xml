        <item name="android:hint">@string/usuario</item>
        <item name="android:inputType">textPersonName</item>
    </style>
    <style name="ContraseñaInicioHorizontal">
        <item name="android:layout_width">@dimen/anchoElementos</item>
        <item name="android:layout_height">@dimen/altoElementos</item>
        <item name="android:layout_marginTop">@dimen/separacionElementosHorizontal</item>
        <item name="android:hint">@string/contrasenia</item>
        <item name="android:inputType">textPassword</item>
    </style>
