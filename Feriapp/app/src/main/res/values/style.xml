        <item name="android:backgroundTint">@color/white</item>
        <item name="android:text">@string/loguearse</item>
        <item name="android:textColor">@color/colorBotones</item>
        <item name="android:textSize">@dimen/LetraBotones</item>
        <item name="android:layout_marginLeft">@dimen/separacionBotonesHorizontalLateral</item>
        <item name="android:layout_marginBottom">@dimen/separacionBotonesHorizontalVertical</item>
        <item name="android:layout_width">@dimen/anchoBotones</item>
